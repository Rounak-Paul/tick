signal<int> shared_signal;
event shared_event;

@shared_event process compute_sum {
    var sum: int = 0;
    var i: int = 1;
    while (i <= 10) {
        sum = sum + i;
        i = i + 1;
    }
    shared_signal.emit(sum);
}

@shared_event process compute_product {
    var product: int = 1;
    var i: int = 1;
    while (i <= 5) {
        product = product * i;
        i = i + 1;
    }
    shared_signal.emit(product);
}
